        "@types/supertest": "^2.0.12",
        "jest": "^30.2.0",
        "prisma": "^5.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.4.3",
