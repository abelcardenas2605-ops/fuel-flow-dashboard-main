// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  CASHIER // Supervisor can be a variation of this or separate
  CONSUMER
}

enum VehicleType {
  CAR
  MOTORCYCLE
  TRUCK
  BUS
  OTHER
}

enum FuelTypeEnum {
  REGULAR_87
  PREMIUM_91
  DIESEL
  LPG
}

enum ShiftStatus {
  OPEN
  CLOSED
}

enum TransactionStatus {
  COMPLETED
  PENDING
  ANNULLED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  QR
}

// Entities

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(CONSUMER)
  employeeId String?  // Carnet ID for Admin/Cashier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  vehicles     Vehicle[]
  transactions Transaction[] // As consumer
  shifts       Shift[]       // As cashier/admin
  invoices     Invoice[]
  notifications Notification[]
}

model Vehicle {
  id           Int         @id @default(autoincrement())
  plate        String      @unique
  type         VehicleType
  tankCapacity Float       // In Liters/Gallons
  userId       Int
  user         User        @relation(fields: [userId], references: [id])
  createdAt    DateTime    @default(now())

  transactions Transaction[]
}

model FuelType {
  id           Int            @id @default(autoincrement())
  name         FuelTypeEnum   @unique
  currentPrice Decimal        @db.Decimal(10, 2)
  stockLevel   Decimal        @db.Decimal(12, 2) // Inventory
  unit         String         // e.g., "Gallons", "Liters"
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  priceHistory FuelPriceHistory[]
  transactions Transaction[]
}

model FuelPriceHistory {
  id            Int      @id @default(autoincrement())
  fuelTypeId    Int
  fuelType      FuelType @relation(fields: [fuelTypeId], references: [id])
  oldPrice      Decimal  @db.Decimal(10, 2)
  newPrice      Decimal  @db.Decimal(10, 2)
  changedBy     Int?     // User ID of admin who changed it (optional)
  effectiveDate DateTime @default(now())
}

model Shift {
  id           Int         @id @default(autoincrement())
  userId       Int
  user         User        @relation(fields: [userId], references: [id])
  startTime    DateTime    @default(now())
  endTime      DateTime?
  startCash    Decimal     @db.Decimal(10, 2)
  endCash      Decimal?    @db.Decimal(10, 2)
  totalSales   Decimal     @default(0) @db.Decimal(12, 2)
  status       ShiftStatus @default(OPEN)

  transactions Transaction[]
}

model Transaction {
  id            Int               @id @default(autoincrement())
  userId        Int               // Consumer
  user          User              @relation(fields: [userId], references: [id])
  shiftId       Int?              // Can be null if automated/self-service but typically linked to open shift
  shift         Shift?            @relation(fields: [shiftId], references: [id])
  vehicleId     Int?
  vehicle       Vehicle?          @relation(fields: [vehicleId], references: [id])
  fuelTypeId    Int
  fuelType      FuelType          @relation(fields: [fuelTypeId], references: [id])
  
  volume        Decimal           @db.Decimal(10, 4) // Amount of fuel
  pricePerUnit  Decimal           @db.Decimal(10, 2) // Price at moment of sale
  totalAmount   Decimal           @db.Decimal(10, 2)
  
  status        TransactionStatus @default(PENDING)
  paymentMethod PaymentMethod
  timestamp     DateTime          @default(now())

  invoice       Invoice?
}

model Invoice {
  id            Int         @id @default(autoincrement())
  transactionId Int         @unique
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  userId        Int         // Recipient
  user          User        @relation(fields: [userId], references: [id])
  taxId         String?     // RNC / Passport for fiscal invoice
  fiscalNumber  String?     // NCF
  issuedAt      DateTime    @default(now())
  url           String?     // URL to PDF
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
